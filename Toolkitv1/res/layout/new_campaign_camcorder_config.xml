<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_popup"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/camcorder_options_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Camcorder Options"
        android:textColor="#aaFFFFFF"
        android:textSize="@dimen/text_size_medium" />

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="0dp"
        android:background="#FF555555"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/camcorder_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/recordLengthText"
                style="@style/TextBody"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".6"
                android:text="Record Length: " />

            <TextView
                android:id="@+id/textView1"
                style="@style/TextBodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter 0 for unlimited recording (User must stop recording)" />

        </LinearLayout>

        <EditText
            android:id="@+id/recordLengthValue"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:inputType="number" 
            android:text="0"/>

        <TextView
            android:id="@+id/recordLengthUnits"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:text=" seconds" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#FF555555"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/submit_camcorder_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#FF087FAA"
        android:text="Submit"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>